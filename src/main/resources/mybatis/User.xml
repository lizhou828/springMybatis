<?xml version="1.0" encoding="UTF-8"?>
         <!DOCTYPE mapper
         PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liz.domain.User">

    <sql id="cols">user_id,user_name,email</sql>
    <sql id="ucols">user_id=#{userId},user_name=#{userName},email=#{email}</sql>

    <!--查询所有记录-->
    <select id="listAll" resultType="aliasesUser">
        select <include refid="cols"/> from t_user
    </select>

    <!--条件查询-->
    <select id="find" parameterType="aliasesUser" resultType="aliasesUser">
        select * from t_user where user_name like "%"#{userName}"%"
    </select>

    <!--查询一个用户-->
    <select id="get" parameterType="java.lang.String" resultType="aliasesUser">
        select <include refid="cols"/> from t_user where user_id=#{userId}
    </select>

    <!--新增-->
    <insert id="create" parameterType="aliasesUser">
        insert into t_user (user_id,user_name,email) values(#{userId},#{userName},#{email})
    </insert>

    <!--修改-->
    <update id="update" parameterType="aliasesUser">
        update t_user set user_name=#{userName},email=#{email} where user_id=#{userId}
    </update>

    <!--删除-->
    <delete id="delete" parameterType="aliasesUser">
        delete from t_user where user_id=#{userId}
    </delete>
</mapper>